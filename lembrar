                <div class="card-body">
                    <h5 class="card-title text-center">Total</h5>
                    <p class="text-center mt-2 mb-1">
                        <?php
                        if (!empty($this->view->geral[0]) && !empty($this->view->geral[1])) {
                            echo 'R$' . (($this->view->geral[0]['valor']) + ($this->view->geral[1]['valor']));
                        } else if (!empty($this->view->geral[0]) && empty($this->view->geral[1])) {
                            echo 'R$' . ($this->view->geral[0]['valor']);
